<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>
        <h3><b>Create a New Listing</b></h3>
        <form method="POST" action="/listings" novalidate class="needs-validation ">
            <div class="mb-3">
                <lable for="title" class="form-label">Title</lable>
                <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
                <div class="valid-feedback">Title looks good!</div>
            </div>
           

            <div class="mb-3">
                <lable for="description" class="form-label">Description</lable>
                <textarea name="listing[description]" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description </div>
            </div>

            <div class="mb-3">
                <lable for="image" class="form-label">Image Link</lable>
                <input name="listing[image][url]" placeholder="enter image url/link" type="text" class="form-control">
                <input name="listing[image][filename]" placeholder="enter image filename" type="text" class="form-control">
            </div>


            <div class="row">
                <div class="mb-3 col-md-4">
                    <lable for="price" class="form-label">Price</lable>
                    <input name="listing[price]" placeholder="enter price" class="form-control" min="1" required>
                    <div class="invalid-feedback">Please enter a valid Price </div>
                </div>


                <div class="mb-3 col-md-8">
                    <lable for="country" class="form-label">Country</lable>
                    <input name="listing[country]" placeholder="India" type="text" class="form-control"required>
                    <div class="invalid-feedback">Please enter a valid Country </div>
                </div> 

            </div>

                
            <div class="mb-3">
                <lable for="location" class="form-label">Location</lable>
                <input name="listing[location]" placeholder="enter location" type="text" class="form-control"required>
                <div class="invalid-feedback">Please enter a valid Location </div>
            </div>

           
            <button class="btn btn-dark add-btn mt-3">Add</button>
           
        </form>
    </div>
</div>
